# -*- mode: ruby -*-
# vi: set ft=ruby :

SERVER_NAME = "server"
SERVER_IP = "192.168.56.110"
SERVER_WORKER = "worker"
SERVER_WORKER_IP = "192.168.56.111"

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  # Server (Controller) Machine
  config.vm.define SERVER_NAME do |server|
    server.vm.hostname = SERVER_NAME
    server.vm.network "private_network", ip: SERVER_IP
    server.vm.provider "virtualbox" do |vb|
      vb.name = SERVER_NAME
      vb.memory = 1024
      vb.cpus = 1
    end
    
    # K3s server provisioning
    # server.vm.provision "shell", path: "./scripts/server_setup.sh", args: [SERVER_IP]
  end
  
  # Worker (Agent) Machine
  config.vm.define SERVER_WORKER do |worker|
    worker.vm.hostname = SERVER_WORKER
    worker.vm.network "private_network", ip: SERVER_WORKER_IP
    worker.vm.provider "virtualbox" do |vb|
      vb.name = SERVER_WORKER
      vb.memory = 1024
      vb.cpus = 1
    end

    # K3s worker provisioning
    # worker.vm.provision "shell", path: "./scripts/worker_setup.sh", args: [SERVER_IP, SERVER_WORKER_IP]
  end

end