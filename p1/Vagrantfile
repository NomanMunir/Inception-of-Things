# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  BOX_IMAGE = "bento/ubuntu-24.04"

  config.vm.provider "virtualbox" do |vb|
    vb.cpus = 1
    vb.memory = 1024 
  end

  config.vm.box_check_update = false

  # Server (controller node)
  config.vm.define "nmunirS" do |server|
    server.vm.box = BOX_IMAGE
    server.vm.hostname = "nmunirS"
    
    server.vm.network "private_network", ip: "192.168.56.110"

    server.vm.provision "shell", path: "./scripts/nmunirS_provision.sh"
  end

  # Worker (agent node)
  config.vm.define "nmunirSW" do |worker|
    worker.vm.box = BOX_IMAGE
    worker.vm.hostname = "nmunirSW"

    worker.vm.network "private_network", ip: "192.168.56.111"

    worker.vm.provision "shell", path: "./scripts/nmunirSW_provision.sh"
  end
end